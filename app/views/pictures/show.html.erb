<div class="container">
  <div class="row">
    <div class="jumbotron">
      <legend>
        <h2 class="text-center">詳細</h2>
      </legend>
      <div class="mb-5 row">
        <div class="col-xl-4">
          <%= image_tag @picture.image.url, class: "img-responsive" %>
        </div>
        <div class="col-xl-8">
          <h3><%= @picture.content %></h3>
          <% if logged_in? && @picture.user_id == current_user.id  %>
            <%= link_to "編集", edit_picture_path(@picture.id), class: 'btn btn-info' %>
            <%= link_to '削除', picture_path(@picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？' }, class: 'btn btn-danger' %>
          <% else %>
          <% end %>

          <% unless @picture.user_id == current_user.id %>
            <% if @favorite.present? %>
              <%= link_to 'お気に入りを解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
            <% else %>
              <%= link_to 'お気に入りに入れる', favorites_path(picture_id: @picture.id), method: :post, class: 'btn btn-info' %>
            <% end %>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
