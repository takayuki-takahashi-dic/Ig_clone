<div class="container">
  <div class="jumbotron">
    <div class="row">

      <% @pictures.each do |picture| %>
        <div class="col-sm-6 col-md-4">
          <div class="panel panel-default">
            <div class="panel-body">
              <%= link_to image_tag(picture.image.url, size: '230x230'), picture_path(picture.id) %>

            </div>
            <div class="panel-footer">
              <%= link_to image_tag(picture.user.image.url, size: '50x50'), user_path(picture.user.id) %>
              <%= picture.content %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
